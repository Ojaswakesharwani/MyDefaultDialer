<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlankFragment_contact_touch"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_name_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/red"
            app:strokeColor="@color/cardview_shadow_end_color"
            app:strokeWidth="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/tv_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_secondary_variant"
                android:fontFamily="@font/poppint_bold"
                android:textSize="45dp"
                android:text="U" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_caller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UDIT"
            android:textSize="18sp"
            android:fontFamily="@font/popinextrabold"
            android:layout_below="@id/mcv_name_icon"
            android:layout_centerHorizontal="true" />



            <LinearLayout
                android:id="@+id/linerdegin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/text_caller"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/incoming_call"
                    app:tint="@color/yellow"/>

                <ImageView
                    android:id="@+id/imagtwo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/chat"
                    app:tint="@color/yellow" />

                <ImageView
                    android:id="@+id/imagethree"
                    android:layout_width="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="50dp"
                    android:src="@drawable/videocall"
                    app:tint="@color/yellow" />


            </LinearLayout>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/linerdegin"
            android:layout_marginHorizontal="10dp"
            app:strokeWidth="0dp"
            android:layout_marginTop="40dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/contact_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact info"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppint_bold"/>

                <ImageView
                    android:id="@+id/contactcalliamge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/incoming_call"
                    android:layout_below="@id/contact_info"
                    android:background="@drawable/circledegin"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/numbernested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +91 7415597473"
                    android:textSize="18sp"
                    android:layout_below="@id/contact_info"
                    android:layout_toRightOf="@id/contactcalliamge"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="10dp"/>


                <ImageView
                    android:id="@+id/contactimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/chat"
                    app:tint="@color/yellow"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circledegin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppint_bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/contactimage"/>



            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>



    </RelativeLayout>

</LinearLayout>