<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyDefaultDialer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Remove translucent effects -->
        <item name="android:windowIsTranslucent">false</item>

        <!-- Prevent any action bar from showing -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyDefaultDialer" parent="Base.Theme.MyDefaultDialer" />

    <style name="ThemeOverlay.MyDefaultDialer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>